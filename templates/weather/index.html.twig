<script> 

const apiKey = '6f4f080bf9916dd91c360d09e7a663da';

const map = L.map('map').setView([48.8566, 2.3522], 6);

L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
    attribution:
        '&copy; OpenStreetMap contributors',
}).addTo(map);

const tempLayer = L.tileLayer(
    `https://tile.openweathermap.org/map/temp_new/{z}/{x}/{y}.png?appid=${apiKey}`,
    { opacity: 1 }
).addTo(map);

const precipLayer = L.tileLayer(
    `https://tile.openweathermap.org/map/precipitation_new/{z}/{x}/{y}.png?appid=${apiKey}`,
    { opacity: 1 }
).addTo(map);

const cloudsLayer = L.tileLayer(
    `https://tile.openweathermap.org/map/clouds_new/{z}/{x}/{y}.png?appid=${apiKey}`,
    { opacity: 1 }
).addTo(map);
 
 
const baseMaps = {
    "OpenStreetMap": L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png')
};

const overlayMaps = {
    "TempÃ©rature": tempLayer,
    "PrÃ©cipitations": precipLayer,
    "Nuages": cloudsLayer
};

L.control.layers(baseMaps, overlayMaps).addTo(map);
 

const cities = ['Paris', 'Lyon', 'Marseille', 'Toulouse', 'Nice', 'Tokyo', 'Rennes', 'Nantes', 'Nancy', 'Bordeaux', 'Clermont-Ferrand', 'Pau', 'Gien'];

cities.forEach(city => {
  fetch(`https://api.openweathermap.org/data/2.5/weather?q=${city}&units=metric&appid=${apiKey}`)
    .then(response => response.json())
    .then(data => {
      const lat = data.coord.lat;
      const lon = data.coord.lon;
      const temp = data.main.temp;

      const marker = L.marker([lat, lon]).addTo(map);
      marker.bindTooltip(`${city}: ${temp}Â°C`, { permanent: true, direction: 'top' });
    });
});

</script>
    
